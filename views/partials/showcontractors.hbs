<div class="productsList">
    {{#each this.products as |product|}}
    <div class="productItem">
        <div class="productItem-img-container">
            <img src="{{product.imageUrl}}"><br>
        </div>
        <div class="productItem-info-wrapper">
            <div class="productItem-info">
                <div class="name">Name:-{{product.contractor_name}}</div>
                <div class="price">Wages:-${{product.contractor_budget}}</div>
            </div>
            <div class="productItem-action">
                <button productId={{product._id}} class="addToCart">Send request</button>
            </div>
        </div>
    </div>
    {{/each}}
</div>

